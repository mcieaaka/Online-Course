<%- include ('./partials/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/adpages.css">
<div class="cform">
    <h2><i>Create a Course</i></h2>
    <form method="post" action="/admin/newcourse">
        <table>
            <tr>
                <td>Course Name:</td>
                <td><input type="text" name="name" required></td>
            </tr>
            <tr>
                <td>Course Description:</td>
                <td><textarea name="description" required></textarea></td>
            </tr>
        </table>
        <p><input onclick="return check()" type="submit" class="bt" id="suc"></p>
    </form>
</div>
<script>
    function check(){
        return confirm("Are you Sure? No changes can be done in the future.")
    }
</script>
