<%- include('./partials/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/forms.css">
<div class="signup">
    <h1 style="text-align: center; font-family: Verdana, Geneva, Tahoma, sans-serif;"><i>Edit!</i></h1>
    <form action="/edit/<%=ue._id%>?_method=patch" method="post" enctype="multipart/form-data">
    <table class="stb">
        <tr>
            <td class="lb">Email:</td>
            <td class="in"><input type="email" name="email" required value="<%=ue.email%>"></td>
        </tr>
        <tr>
            <td class="lb">Instagram:</td>
            <td class="in"><input type="text" name="insta" required value="<%=ue.insta%>"></td>
        </tr>
        <tr>
            <td class="lb">Bio:</td>
            <td class="in"><textarea name="bio" required value="<%=ue.bio%>"></textarea></td>
        </tr>
        <tr>
            <td class="lb">Image:</td>
            <td class="in"><input type="file" name="userimage" required value="<%=ue.userimage%>"></td>
        </tr>
        <tr>
            <td><input class="bt bt-sub" type="submit"></td>
            <td class="in"><input class="bt bt-sub" type="reset"></td>
        </tr>
    </table>
    </form>
</div>

<%- include('./partials/footer.ejs') %>